{
    "name": "Docket",
    "version": "0.1.0",
    "description": "A simple task list extension",
    "manifest_version": 2,
    
    "icons": {
        "48": "icons/icon-48.png"
    },

    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["docket.js"]
        }
    ],

    "browser_action": {
        "default_icon": "icons/icon-48.png",
        "default_title": "Docket",
        "default_popup": "docket.html"
    },

    "permissions": [
        "storage", "activeTab"
    ]

}